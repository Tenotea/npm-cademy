// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum SupportedTitle {
    Mr
    Mrs
    Miss
    Dr
    Prof
}

model Teacher {
    id                   String         @id @default(uuid())
    firstName            String
    lastName             String
    identificationNumber Int            @unique
    title                SupportedTitle
    dateOfBirth          DateTime
    teacherNumber        Int
    salary               Int?
    createdAt            DateTime       @default(now())
}

model Student {
    id                   String   @id @default(uuid())
    firstName            String
    lastName             String
    identificationNumber Int      @unique
    dateOfBirth          DateTime
    studentNumber        Int
    createdAt            DateTime @default(now())
}
